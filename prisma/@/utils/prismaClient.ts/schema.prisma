generator client {
  provider = "prisma-client-js"
  output   = "@/utils/prismaClient.ts"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model News {
  id          Int      @id @default(autoincrement())
  title       String
  link        String   @unique
  source      String
  publishedAt DateTime
  createdAt   DateTime @default(now())
}
